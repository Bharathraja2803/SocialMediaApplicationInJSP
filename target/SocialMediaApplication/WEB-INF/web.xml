<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <filter>
  	<filter-name>AuthenticationFilter</filter-name>
  	<display-name>AuthenticationFilter</display-name>
  	<description></description>
  	<filter-class>org.bharath.controller.AuthenticationFilter</filter-class>
  </filter>
  <filter>
  	<filter-name>ValidateUserDetailsForSignUpFilter</filter-name>
  	<display-name>ValidateUserDetailsForSignUpFilter</display-name>
  	<description></description>
  	<filter-class>org.bharath.controller.ValidateUserDetailsForSignUpFilter</filter-class>
  </filter>
  <filter>
  	<filter-name>ForgetPasswordEmailDobValidationFilter</filter-name>
  	<display-name>ForgetPasswordEmailDobValidationFilter</display-name>
  	<description></description>
  	<filter-class>org.bharath.controller.ForgetPasswordEmailDobValidationFilter</filter-class>
  </filter>
  <filter>
  	<filter-name>ChangePasswordValidateFilter</filter-name>
  	<display-name>ChangePasswordValidateFilter</display-name>
  	<description></description>
  	<filter-class>org.bharath.controller.ChangePasswordValidateFilter</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>AuthenticationFilter</filter-name>
  	<url-pattern>/post.jsp</url-pattern>
  </filter-mapping>
  <filter-mapping>
  	<filter-name>ValidateUserDetailsForSignUpFilter</filter-name>
  	<url-pattern>/CreateNewUserServlet</url-pattern>
  </filter-mapping>
  <filter-mapping>
  	<filter-name>ForgetPasswordEmailDobValidationFilter</filter-name>
  	<url-pattern>/change_password.jsp</url-pattern>
  </filter-mapping>
  <filter-mapping>
  	<filter-name>ChangePasswordValidateFilter</filter-name>
  	<url-pattern>/ChangePasswordServlet</url-pattern>
  </filter-mapping>
  <servlet>
  	<servlet-name>CreateNewUserServlet</servlet-name>
  	<display-name>CreateNewUserServlet</display-name>
  	<description></description>
  	<servlet-class>org.bharath.controller.CreateUserServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>ChangePasswordServlet</servlet-name>
  	<display-name>ChangePasswordServlet</display-name>
  	<description></description>
  	<servlet-class>org.bharath.controller.ChangePasswordServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>LogoutServlet</servlet-name>
  	<display-name>LogoutServlet</display-name>
  	<description></description>
  	<servlet-class>org.bharath.controller.LogoutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>CreateNewUserServlet</servlet-name>
  	<url-pattern>/CreateNewUserServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>ChangePasswordServlet</servlet-name>
  	<url-pattern>/ChangePasswordServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>LogoutServlet</servlet-name>
  	<url-pattern>/LogoutServlet</url-pattern>
  </servlet-mapping>
</web-app>
